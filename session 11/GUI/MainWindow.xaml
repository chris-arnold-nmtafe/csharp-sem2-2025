<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="Button_AddPerson" Content="Add Person" HorizontalAlignment="Left" Margin="149,233,0,0" VerticalAlignment="Top" Width="120" Click="Button_Add_Person_Click"/>
        <Label Content="First Name:" HorizontalAlignment="Left" Margin="74,71,0,0" VerticalAlignment="Top"/>
        <Label Content="Last Name:" HorizontalAlignment="Left" Margin="74,102,0,0" VerticalAlignment="Top"/>
        <Label Content="Date Of Birth:" HorizontalAlignment="Left" Margin="61,133,0,0" VerticalAlignment="Top"/>
        <Label Content="Height:" HorizontalAlignment="Left" Margin="95,186,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Textbox_FirstName" HorizontalAlignment="Left" Height="23" Margin="149,74,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Textbox_LastName" HorizontalAlignment="Left" Height="23" Margin="149,106,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <DatePicker x:Name="Datepicker_DateOfBirth" HorizontalAlignment="Left" Margin="149,142,0,0" VerticalAlignment="Top" Height="35" Width="120"/>
        <ComboBox x:Name="Combo_Height" HorizontalAlignment="Left" Margin="149,190,0,0" VerticalAlignment="Top" Width="120"/>
        <ListBox x:Name="Listbox_People" HorizontalAlignment="Left" Height="367" Margin="579,10,0,0" VerticalAlignment="Top" Width="203" SelectionChanged="People_SelectionChanged"/>
        <Button x:Name="Button_LoadPeople" Content="Load People" HorizontalAlignment="Left" Margin="579,382,0,0" VerticalAlignment="Top" Width="203" Height="27" Click="Button_Load_People_Click"/>
        <Button Content="Search" HorizontalAlignment="Left" Margin="241,355,0,0" VerticalAlignment="Top" Click="Button_Click"/>
    </Grid>
</Window>
