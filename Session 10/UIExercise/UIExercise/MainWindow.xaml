<Window x:Class="UIExercise.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UIExercise"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="listStudents" HorizontalAlignment="Left" Height="400" Margin="10,10,0,0" VerticalAlignment="Top" Width="267" SelectionChanged="listStudents_SelectionChanged" MouseDoubleClick="listStudents_MouseDoubleClick">
        </ListBox>
        <Button x:Name="buttonGetStudents" Click="buttonGetStudents_Click" Content="Get Students" HorizontalAlignment="Left" Margin="654,10,0,0" VerticalAlignment="Top" Width="128" Height="58" FontSize="20"/>
        <Button x:Name="buttonAddStudent" Click="buttonAddStudent_Click" Content="Add Student" HorizontalAlignment="Left" Margin="654,100,0,0" VerticalAlignment="Top" Width="128" Height="58" FontSize="20"/>
        <Button x:Name="buttonSaveStudent" Click="buttonSaveStudent_Click" Content="Edit Student" HorizontalAlignment="Left" Margin="654,190,0,0" VerticalAlignment="Top" Width="128" Height="58" FontSize="20"/>
        <local:StudentPalette x:Name="palette" HorizontalAlignment="Left" Margin="352,43,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
