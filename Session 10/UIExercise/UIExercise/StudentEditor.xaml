<Window x:Class="UIExercise.StudentEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UIExercise"
        mc:Ignorable="d"
        Title="StudentEditor" Height="200" Width="250">
    <Grid RenderTransformOrigin="0.5,0.5" Margin="35,5,-35,-5">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="-12.179"/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>
        <local:StudentPalette x:Name="palette" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top"/>
        <Button Content="Fail" HorizontalAlignment="Left" Margin="69,100,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Button Content="Change Mind" HorizontalAlignment="Left" Margin="100,100,0,0" VerticalAlignment="Top" Click="Cancel_Click"/>
    </Grid>
</Window>
