<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListExercise.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="We makes the Students!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Add students to your, old skool." FontSize="Title" Padding="30,10,30,10"/>
        <Entry Placeholder="Given Name" x:Name="gnameEntry"/>
        <Entry Placeholder="Family Name" x:Name="fnameEntry"/>
        <Picker x:Name="enrolmentPicker" SelectedIndexChanged="enrolmentPicker_SelectedIndexChanged" />
        <Button x:Name="getStudents" Text="Get Students" Clicked="getStudents_Clicked" />
        <ListView x:Name="studentList" ItemSelected="studentList_ItemSelected" />
    </StackLayout>

</ContentPage>

