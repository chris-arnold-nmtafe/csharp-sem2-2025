<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image Margin="-101,-268,-123,-834" Source="/images/Piazza.png" Stretch="Fill"/>


        <TextBox x:Name="foodBox" HorizontalAlignment="Left" Margin="98,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Feed" HorizontalAlignment="Left" Margin="260,80,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <CheckBox IsChecked="True" x:Name="hungryBox" Content="Hungry!!!!" HorizontalAlignment="Left" Margin="98,116,0,0" VerticalAlignment="Top" FontSize="24pt"/>
        <ListBox x:Name="stomach" Margin="329,9,307,170"/>
        <Button Content="Hack the Stomach!!!" FontSize="18pt" HorizontalAlignment="Left" Margin="98,192,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>
        <Button Content="Vomit!!!!!!" FontSize="72pt" HorizontalAlignment="Left" Margin="117,264,0,0" VerticalAlignment="Top" Click="Button_Click_2"/>
        <Label x:Name="typeLabel" Content="Active Animal: " HorizontalAlignment="Left" Margin="38,30,0,0" VerticalAlignment="Top" Width="221"/>


    </Grid>
</Window>
