<Window x:Class="Project.JobEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        Title="JobEditor" Height="150" Width="300">
    <Grid>
        <Label Content="Title" HorizontalAlignment="Left" Margin="10,7,0,0" VerticalAlignment="Top"/>
        <Label Content="Date" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top"/>
        <Label Content="Cost" HorizontalAlignment="Left" Margin="10,53,0,0" VerticalAlignment="Top"/>
        <Label Content="Complete" HorizontalAlignment="Left" Margin="10,73,0,0" VerticalAlignment="Top"/>
        <Label Content="Assignee" HorizontalAlignment="Left" Margin="10,93,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="titleBox" HorizontalAlignment="Left" Margin="106,11,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <DatePicker x:Name="dateBox" HorizontalAlignment="Left" Margin="106,31,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="costBox" HorizontalAlignment="Left" Margin="106,57,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="costBox_TextChanged" PreviewTextInput="assigneeBox_PreviewTextInput"/>
        <CheckBox x:Name="completeBox" HorizontalAlignment="Left" Margin="106,78,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="assigneeBox" HorizontalAlignment="Left" Margin="106,97,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="251,106,0,0" VerticalAlignment="Top" Click="Button_Click"/>
    </Grid>
</Window>
